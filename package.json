{
  "main": "src/index.js",
  "source": {
    "src/**/*.css": "dist/styles"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/preset-react": "^7.0.0",
    "@wordpress/babel-preset-default": "^2.1.0",
    "astroturf": "^0.9.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "parcel-bundler": "^1.12.0",
    "postcss-modules": "^1.4.1",
    "webpack": ">=2"
  },
  "scripts": {
    "start": "parcel watch src/index.js",
    "build": "parcel build src/index.js",
    "package": "./bin/build-plugin-zip.sh"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "javascript"
  ],
  "postcss": {
    "modules": true,
    "plugins": [
      "postcss-nested"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "wp.element.createElement"
        }
      ],
      [
        "astroturf/plugin"
      ]
    ]
  },
  "dependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4"
  }
}
